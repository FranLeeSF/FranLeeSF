        <div id="results" class="mt-8 hidden">
            <h2 class="text-xl font-bold mb-4">Results</h2>
            <div id="resultsContent" class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <!-- Results will be populated here -->
            </div>
        </div>
    </div>

    <script>
        function calculateResults() {
            const annualRevenue = parseFloat(document.getElementById('annualRevenue').value);
            const grossMargin = parseFloat(document.getElementById('grossMargin').value) / 100;
            const annualWorkingHours = parseFloat(document.getElementById('annualWorkingHours').value);
            const numDevelopers = parseFloat(document.getElementById('numDevelopers').value);
            const developerHourlyCost = parseFloat(document.getElementById('developerHourlyCost').value);
            const developerTimePercent = parseFloat(document.getElementById('developerTimePercent').value) / 100;
            const numActiveUsers = parseFloat(document.getElementById('numActiveUsers').value);
            const userHourlyCost = parseFloat(document.getElementById('userHourlyCost').value);
            const userTimePercent = parseFloat(document.getElementById('userTimePercent').value) / 100;
            const annualCases = parseFloat(document.getElementById('annualCases').value);
            const caseResolutionTime = parseFloat(document.getElementById('caseResolutionTime').value);
            const numSupportFTE = parseFloat(document.getElementById('numSupportFTE').value);
            const supportHourlyCost = parseFloat(document.getElementById('supportHourlyCost').value);
            const supportTimePercent = parseFloat(document.getElementById('supportTimePercent').value) / 100;
            const salesforceRevPercent = parseFloat(document.getElementById('salesforceRevPercent').value) / 100;
            const annualDisruptions = parseFloat(document.getElementById('annualDisruptions').value);
            const disruptionDuration = parseFloat(document.getElementById('disruptionDuration').value);

            // Calculate results
            const developerCost = numDevelopers * developerHourlyCost * annualWorkingHours * developerTimePercent;
            const userProductivityCost = numActiveUsers * userHourlyCost * annualWorkingHours * userTimePercent;
            const supportCost = annualCases * caseResolutionTime * 24 * numSupportFTE * supportHourlyCost * supportTimePercent;
            const disruptionCost = (annualRevenue * salesforceRevPercent / (annualWorkingHours * 365 / 7 * 24)) * annualDisruptions * disruptionDuration;

            const totalCost = developerCost + userProductivityCost + supportCost + disruptionCost;
            const costAsPercentOfRevenue = (totalCost / annualRevenue) * 100;

            // Display results
            const resultsContent = document.getElementById('resultsContent');
            resultsContent.innerHTML = `
                <div>
                    <p class="font-bold">Developer & Admin Cost:</p>
                    <p>$${developerCost.toLocaleString(undefined, {maximumFractionDigits: 2})}</p>
                </div>
                <div>
                    <p class="font-bold">User Productivity Cost:</p>
                    <p>$${userProductivityCost.toLocaleString(undefined, {maximumFractionDigits: 2})}</p>
                </div>
                <div>
                    <p class="font-bold">Support Cost:</p>
                    <p>$${supportCost.toLocaleString(undefined, {maximumFractionDigits: 2})}</p>
                </div>
                <div>
                    <p class="font-bold">Business Disruption Cost:</p>
                    <p>$${disruptionCost.toLocaleString(undefined, {maximumFractionDigits: 2})}</p>
                </div>
                <div>
                    <p class="font-bold">Total Cost:</p>
                    <p>$${totalCost.toLocaleString(undefined, {maximumFractionDigits: 2})}</p>
                </div>
                <div>
                    <p class="font-bold">Cost as % of Revenue:</p>
                    <p>${costAsPercentOfRevenue.toLocaleString(undefined, {maximumFractionDigits: 2})}%</p>
                </div>
            `;

            document.getElementById('results').classList.remove('hidden');
        }
    </script>
</body>
